            "enabled": true,
            "analysis_types": ["performance", "psychometric", "chronometric"],
            "statistical_tests": ["t_test", "anova"]
        }
    },
    "output_settings": {
        "save_format": "mat",
        "figure_format": "png",
        "auto_generate_report": true
    }
}