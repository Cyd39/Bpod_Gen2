{
    "data_settings": {
        "sampling_rate": 1000,
        "file_format": "mat",
        "data_columns": ["trial_num", "response", "rt", "correct"],
        "stimulus_column": "Stimulus",
        "response_window_column": "ResWin",
        "intensity_column": "AudIntensity",
        "default_data_path": "G:\\Data\\OperantConditioning\\Yudi",
        "lick_events": {
            "lick_on_event": "BNC1High",
            "lick_off_event": "BNC1Low",
            "lick_on_label": "LickOn",
            "lick_off_label": "LickOff"
        }
    },
    "experiment_settings": {
        "stimulus_types": {
            "unimodal_auditory": {
                "enabled": true,
                "intensity_range": [-20, 80],
                "default_intensity": 60
            },
            "unimodal_vibration": {
                "enabled": true,
                "intensity_range": [0, 100],
                "default_intensity": 50
            },
            "bimodal": {
                "enabled": true,
                "auditory_intensity_range": [-20, 80],
                "vibration_intensity_range": [0, 100]
            }
        },
        "timing_parameters": {
            "default_response_window": 2.0,
            "inter_trial_interval_min": 1.0,
            "inter_trial_interval_max": 3.0,
            "quiet_time_min": 0.5,
            "quiet_time_max": 1.0,
            "reward_duration": 1.0
        }
    },
    "analysis_settings": {
        "real_time": {
            "enabled": true,
            "analysis_types": ["hit_rate", "latency", "performance"],
            "update_interval": 0.1,
            "trial_buffer_size": 10
        },
        "post_hoc": {
            "enabled": true,
            "analysis_types": ["hit_rate", "latency", "psychometric", "chronometric", "performance"],
            "statistical_tests": ["kruskal_wallis", "multiple_comparisons", "t_test"],
            "psychometric_curve": {
                "enabled": true,
                "fit_method": "logistic",
                "threshold_method": "75_percent"
            }
        },
        "hit_rate_analysis": {
            "min_trials_per_intensity": 5,
            "exclude_early_trials": 0,
            "exclude_late_trials": 0
        },
        "latency_analysis": {
            "min_latency": 0.05,
            "max_latency": 2.0,
            "exclude_outliers": true,
            "outlier_method": "iqr",
            "outlier_threshold": 1.5
        }
    },
    "visualization_settings": {
        "raster_plot": {
            "enabled": true,
            "color_map": "turbo",
            "marker_size": 8,
            "line_width": 1.5,
            "x_limit": [-1, 3],
            "y_separation": 10,
            "show_stimulus_marker": true,
            "stimulus_marker_color": "red",
            "stimulus_marker_style": "--"
        },
        "histogram": {
            "enabled": true,
            "bin_edges_all": [-5, 0.05, 3],
            "bin_edges_first": [0, 0.05, 2],
            "normalize": false,
            "show_stimulus_onset": true
        },
        "hit_rate_plot": {
            "enabled": true,
            "show_sem": true,
            "show_data_points": true,
            "show_trial_counts": true,
            "y_limit": [0, 100],
            "x_label": "Stimulus Intensity (dB)",
            "y_label": "Hit Rate (%)",
            "title": "Psychometric Function",
            "grid": true,
            "legend": true
        },
        "latency_plot": {
            "enabled": true,
            "plot_type": "boxplot",
            "show_individual_points": true,
            "show_outliers": true,
            "y_limit": [0, 2],
            "x_label": "Stimulus Intensity (dB)",
            "y_label": "Response Latency (s)",
            "title": "Response Latency by Intensity"
        },
        "performance_plot": {
            "enabled": true,
            "show_trial_progression": true,
            "show_running_average": true,
            "window_size": 20,
            "y_limit": [0, 100]
        },
        "figure_settings": {
            "figure_size": [1200, 800],
            "font_size": 12,
            "line_width": 2,
            "marker_size": 8,
            "background_color": "white",
            "grid_alpha": 0.3
        }
    },
    "output_settings": {
        "save_format": "mat",
        "figure_format": "png",
        "auto_generate_report": true,
        "save_figures": true,
        "figure_dpi": 300,
        "output_directory": "Analysis_Results",
        "create_subdirectories": true,
        "timestamp_filenames": true,
        "save_raw_data": true,
        "save_processed_data": true,
        "save_analysis_results": true,
        "report_format": "html",
        "include_figures_in_report": true
    },
    "psychophysics_settings": {
        "threshold_detection": {
            "method": "75_percent",
            "confidence_interval": 0.95,
            "bootstrap_samples": 1000
        },
        "just_noticeable_difference": {
            "enabled": true,
            "method": "difference_limen",
            "threshold_percent": 75
        },
        "bias_analysis": {
            "enabled": true,
            "method": "criterion_shift",
            "reference_intensity": 0
        }
    }
}